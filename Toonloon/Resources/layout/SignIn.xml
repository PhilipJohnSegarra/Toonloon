<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Text -->
    <TextView
        android:id="@+id/signintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="200px"
        android:textColor="@color/colorAccent"/>

    <!-- Username -->
    <EditText
    android:id="@+id/usernameS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background"
    android:backgroundTint="?android:attr/colorPrimary"    
    android:textColorHint="#bec1d4"
    android:textColor="@android:color/white"
    android:hint="Enter your email or username"
    android:inputType="text"
    android:layout_marginLeft="100px"
    android:layout_marginRight="100px"
    android:layout_marginTop="80px"
    android:paddingTop="30px"
    android:paddingBottom="30px"
    android:paddingLeft="80px"/>
    
     <!-- Password -->
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60px">

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="?android:attr/colorPrimary"    
            android:textColorHint="#bec1d4"
            android:textColor="@android:color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:paddingLeft="80px"/>

        <ImageButton
            android:id="@+id/togglePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/design_ic_visibility"
            android:layout_alignBottom="@id/pass"
            android:layout_alignEnd="@id/pass"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="13dp"
            android:paddingRight="25dp"
            android:background="@null"/>

    </RelativeLayout>

    <!-- login button -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:textStyle="bold"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px"
        android:layout_marginTop="40px"/>

    <Button
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Forgot Password?"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="?android:attr/colorPrimaryDark"
            android:textAllCaps="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⎯⎯⎯⎯⎯⎯⎯⎯⎯  Or ⎯⎯⎯⎯⎯⎯⎯⎯⎯"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="50px"
        android:layout_marginBottom="40px"/>

    <!-- Signup w google button -->
    <Button
        android:id="@+id/buttongoogleS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/google_25"
        android:paddingStart="40dp"
        android:text="Log in with Google"
        android:background="@drawable/btn_white"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="50px"/>
    
    </LinearLayout>
</ScrollView>
